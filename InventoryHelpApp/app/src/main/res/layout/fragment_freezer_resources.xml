<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FreezerResources"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/preview">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wprowadź wartości poszczególnych produktów (CHŁODNIA) :"
        android:textSize="30sp"
        android:layout_marginBottom="10sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/information1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="Nazwa produktu"
            android:gravity="center" />

        <TextView
            android:id="@+id/information2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="Jednostka wagi"
            android:gravity="center" />

        <TextView
            android:id="@+id/information3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wartość"
            android:gravity="center" />
    </LinearLayout>

    <!-- Table Rows -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Row 1 -->
        <TableRow>

            <TextView
                android:id="@+id/nameMeat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="mieso"
                android:gravity="center" />

            <TextView
                android:id="@+id/unitMeat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="worki (3kg)"
                android:gravity="center" />

            <EditText
                android:id="@+id/editMeat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="48dp"
                android:textSize="20sp"
                android:inputType="number"
                android:hint="tutaj wprowadź.."
                android:gravity="center" />
        </TableRow>

        <!-- Row 2 -->
        <TableRow>

            <TextView
                android:id="@+id/nameBacon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="boczek"
                android:gravity="center" />

            <TextView
                android:id="@+id/unitBacon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="opakowania"
                android:gravity="center" />

            <EditText
                android:id="@+id/editBacon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="48dp"
                android:textSize="20sp"
                android:inputType="number"
                android:hint="tutaj wprowadź.."
                android:gravity="center" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/nameSalad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="sałata lodowa"
                android:gravity="center" />

            <TextView
                android:id="@+id/unitSalad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="opakowania"
                android:gravity="center" />

            <EditText
                android:id="@+id/editSalad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="48dp"
                android:textSize="20sp"
                android:inputType="number"
                android:hint="tutaj wprowadź.."
                android:gravity="center" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/nameCornsalad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="roszponka"
                android:gravity="center" />

            <TextView
                android:id="@+id/unitCornsalad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="opakowania"
                android:gravity="center" />

            <EditText
                android:id="@+id/editCornsalad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="48dp"
                android:textSize="20sp"
                android:inputType="number"
                android:hint="tutaj wprowadź.."
                android:gravity="center" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/nameRucola"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="rukola"
                android:gravity="center" />

            <TextView
                android:id="@+id/unitRucola"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="opakowania"
                android:gravity="center" />

            <EditText
                android:id="@+id/editRucola"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="48dp"
                android:textSize="20sp"
                android:inputType="number"
                android:hint="tutaj wprowadź.."
                android:gravity="center" />
        </TableRow>

    </TableLayout>



    <Button
        android:id="@+id/submitFreezerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="zatwierdź"/>
</LinearLayout>
