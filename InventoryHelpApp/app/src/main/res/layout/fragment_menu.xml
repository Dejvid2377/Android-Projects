<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menu">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/kitchenSwitchFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout = "@layout/fragment_support_switch_kitchen"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/freezerSwitchFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout = "@layout/fragment_support_switch_freezer"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mailSwitchFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout = "@layout/fragment_support_switch_mail"/>

</LinearLayout>